#!/usr/bin/env zsh
#
### Usage: doc <documentation>
### available documentations: basic(b), zsh(z), history(h), tmux(t)

DOCS_ROOT="$(dirname $0)/_docs"
file=
case "$1" in
    "his"* | "h" )
        file="history"
        ;;
    "basic" | "b" )
        file+="basic"
        ;;
    "zsh" | "z" )
        file+="zsh"
        ;;
    "tmux" | "t" )
        file+="tmux"
        ;;
    * )
        sed -rn 's/^### ?//;T;p' "$(realpath $0)"
        exit 0
        ;;
esac

echo ${DOCS_ROOT}/${file}
sed -rn 's/^### ?//;T;p' "${DOCS_ROOT}/${file}"
