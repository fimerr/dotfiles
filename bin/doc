#!/usr/bin/env zsh
#
### Usage: doc <documentation>
### Available documentations: general(g), zsh(z), history(h), tmux(t)

DOCS_ROOT="$(dirname $0)/_docs"
file=${DOCS_ROOT}/
case "$1" in
    "his"* | "h" )
        file+="history"
        ;;
    "general" | "g" )
        file+="general"
        ;;
    "zsh" | "z" )
        file+="zsh"
        ;;
    "tmux" | "t" )
        file+="tmux"
        ;;
    * )
        sed -rn 's/^### ?//;T;p' "$(realpath $0)"
        exit 0
        ;;
esac

sed -rn 's/^### ?//;T;p' "${file}"
