#!/usr/bin/env zsh
#
### Quick search in a directory for a string ($@).
if [[ $1 =~ ("-h"|"--help") ]]; then
    source print-comment "$(realpath $0)" $1
    exit 0
fi

set -e
# use -iru to search directories ack usually ignores (like .git)
if [ -x /usr/bin/ack-grep ]; then
    ack-grep -i "$@"
else
    ack -i "$@"
fi
