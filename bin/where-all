#!/usr/bin/env zsh
#
### Find where script / function is
### Usage
###    -s <script>
###    -f <function>
###    -a <alias>
[[ $1 =~ ("-h"|"--help") ]] && _print_help "$(realpath $0)"

case "$1" in
    "-s" )
        shift
        where "$@"
        ;;
    "-f" )
        shift
        whence -v $@
        ;;
    "-a" )
        PS4='+%x:%I>' zsh -i -x -c '' |& grep "alias '$2"
        ;;
    * )
        which "$@"
        ;;
esac
