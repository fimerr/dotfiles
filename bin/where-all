#!/usr/bin/env zsh
#
### Find where script / function is
### Usage
###    -s <script>
###    -f <function>
###    -a <alias>
_print_help "$(realpath $0)" "$@"

case "$1" in
    "-s" )
        where "$@"
        ;;
    "-f" )
        whence -v "$@"
        ;;
    "-a" )
        PS4='+%x:%I>' zsh -i -x -c '' |& grep "alias '$2"
        ;;
    * )
        where "$@"
        ;;
esac
