#!/usr/bin/env zsh
#
### Show private cheat sheet
###
### Usage: cht -x <documentation>
### Available documentations:
###     general(g)
###     history(h)
###     tmux(t)
###     zsh(z)

file=${DOTFILES_ROOT}/bin/_cht
if [[ "$1" == "-x" ]]; then
    file="$(dirname $0)/_cht/"
    case "$2" in
        "his"* | "h" )
            file+="history"
            ;;
        "general" | "g" )
            file+="general"
            ;;
        "zsh" | "z" )
            file+="zsh"
            ;;
        "tmux" | "t" )
            file+="tmux"
            ;;
        * )
            file="$(realpath $0)"
            ;;
    esac
    _print_help "${file}"
else
    # https://github.com/chubin/cheat.sh
    /usr/local/bin/cht.sh $@
fi
