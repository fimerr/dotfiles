#!/usr/bin/env zsh
#
### Easy ls and grep
### Usage:
###     ls-grep foo    ls current directory and grep "foo"
###     ls-grep ~ foo    ls ~ and grep "foo"
[[ $1 =~ ("-h"|"--help") ]] && _print_help "$(realpath $0)"

alias grep="\grep --color=always --exclude-dir={.bzr,CVS,.git,.hg,.svn,.idea,.tox}"
if [[ $# == 1 ]]; then
    ls -al $(pwd) | grep -i $1
else
    ls -al $1 | grep -i $2
fi
